@model List<Duyuru>
@{
    ViewData["Title"] = "Listele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Microsoft.AspNetCore.Http
@{
    var yetki = Context.Session.GetInt32("yetki");
}
@if (yetki != 4)
{
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <nav class=" navbar navbar-light bg-white">
                    <a class="navbar-brand">Duyuru Ekle</a>

                    <a href="~/Duyuru/Ekle" class="btn btn-success my-2 my-sm-0" type="submit">Ekle</a>
                </nav>
            </div>
        </div>
    </div>
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>


            <div class="table-responsive">
                <table class="table table-striped" id="duyurular1">
                    <thead>
                        <tr>

                            <th>
                                Duyuru Başlığı
                            </th>
                            <th>
                                İçerik
                            </th>
                            <th>
                                Görüntüle
                            </th>
                            @if (yetki != 4)
                            {
                                <th>
                                    Yönet
                                </th>
                            }
                        </tr>
                    </thead>
                    <tbody>

                        @{
                            foreach (var i in Model)
                            {
                                <tr>


                                    <td>
                                        @i.Baslik
                                    </td>
                                    <td>
                                        @i.Icerik.Substring(0, Math.Min(i.Icerik.Length, 20))
                                    </td>
                                    <td>

                                        <a href="~/Duyuru/Goruntule/@i.ID" class="btn btn-sm btn-success">Görüntüle</a>
                                    </td>
                                    @if (yetki != 4)
                                    {
                                        <td>

                                            <a href="~/Duyuru/Duzenle/@i.ID" class="btn btn-primary">Duzenle</a>
                                            <a href="~/Duyuru/Sil/@i.ID" class="btn btn-danger">Sil</a>

                                        </td>
                                    }
                                </tr>


                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#duyurular1').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"}
        });
    });
</script>
