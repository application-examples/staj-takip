    .btn-circle {
        border-radius: 50%;
    }

        .btn-circle:hover {
            border-radius: 5%;
            width: 140px;
        }

    .well {
        background-color: rgba(245, 245, 245, 0.4);
    }
</style>
@using Microsoft.AspNetCore.Http

@{
    var yetki = Context.Session.GetInt32("yetki");
    var profilid = Context.Session.GetInt32("profilid");
    var kadi = Context.Session.GetString("kadi");
    var id = Context.Session.GetInt32("id");
}

@if (yetki == 4)
{
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <nav class=" navbar navbar-light bg-white">
                    <a class="navbar-brand">Günlük Ekle</a>
                    <a href="~/Gunluk/Ekle" class="btn btn-success my-2 my-sm-0" type="submit">Ekle</a>
                </nav>
            </div>
        </div>
    </div>
}


@if (yetki != 4)
{
    
}

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card p-3">
            <div id="adsoyad" class="h6">Ad Soyad</div> <div class="h6" id="oran">x/y Devamsızlık</div>
        </div>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title py-1">Günlük Listesi</h4>


                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="gunluklistesi">
                        <thead class="text-info">
                            <tr>

                                <th class="font-weight-bold">
                                    Günlük Başlığı
                                </th>
                                <th class="font-weight-bold">
                                    İçerik
                                </th>
                                <th class="font-weight-bold">
                                    Tarih
                                </th>

                                <th class="font-weight-bold">
                                    Durum
                                </th>
                                <th class="font-weight-bold">
                                    Görüntüle
                                </th>
                            </tr>
                        </thead>
                        <tbody id="gunlukbody"></tbody>


                    </table>
                </div>
            </div>
        </div>
    </div>

<script>
    function formatDate(date) {
        var monthNames = [
            "Ocak", "Şubat", "Mart",
            "Nisan", "Mayıs", "Haziran", "Temmuz",
            "Ağustos", "Eylül", "Ekim",
            "Kasım", "Aralık"
        ];

        var day = date.getDate();
        var monthIndex = date.getMonth();
        var year = date.getFullYear();

        return day + ' ' + monthNames[monthIndex] + ' ' + year;
    }
    var gunluklistesi;
    var gunluklistesicek = function () {
        birimlistesi = $('#gunluklistesi').DataTable({
            "ajax": {
                url: "/Gunluk/GunlukleriCekJson",
                responsive: true,
                type: "POST",
                data: { id: window.location.pathname.substring(window.location.pathname.lastIndexOf('/') + 1) },
                dataType: 'json',
                "dataSrc": function (data) {
                    $('#adsoyad').html(data.profil.ad + " " + data.profil.soyad);
                    $('#oran').html('TODO: Oran');

                    var return_data = new Array();
                    $.each(data.gunlukler, function (id, obj) {
                        var durum1 = "";
                        if (obj.onayDurumu === 1) {
                            durum1 = "<span class='badge badge-success'>Onaylandı</span>";
                        }
                        else if (obj.onayDurumu === -1) {
                            durum1 = "<span class='badge badge-secondary'>Beklemede</span>";
                        }
                        else if (obj.onayDurumu === 0) {
                            durum1 = "<span class='badge badge-danger'>Reddedildi</span>";
                        }
                        var tarih = Date.parse(obj.tarih);
                        return_data.push({
                            'gunlukbaslik': obj.baslik,
                            'icerik': obj.bilgiler.substring(0, Math.min(obj.bilgiler.toString().length, 54)),
                            'tarih': formatDate(new Date(tarih)),
                            'durum': durum1,
                            'goruntule': '<div class="text-center "><a class="btn btn-dark" href="/Gunluk/Goruntule/' + obj.id + '"><span class="mdi mdi-eye text-white"></span> Görüntüle</a></div>'
                        });
                    });

                    return return_data;
                }
            },
            "columns": [
                {
                    "data": "gunlukbaslik"
                },
                { "data": "icerik" },
                { "data": "tarih", "width": "10%" },
                { "data": "durum", "width": "10%" },
                { "data": "goruntule", "width": "10%" }

            ],
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            }



        });


    }
    var birimcek = function (ids) {
        return $.ajax({
            url: '/Birim/Goruntule',
            type: 'POST',
            dataType: 'json',
            data: { id: ids },
            success: function (data) {
                $('#birimadi1').val(data.ad);
                $('#birimaciklama').html(data.aciklama);
            }

        });
    }

    $(function () {


        gunluklistesicek();
        var kontrol = (ad, aciklama) => {
            if (ad == '') {
                Swal.mixin({
                    toast: 'true',
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                }).fire({
                    type: 'warning',
                    title: 'Birim adı girilmedi.'
                });

                return false;
            } else if (aciklama == '') {
                Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                }).fire({
                    type: 'warning',
                    title: 'Açıklama girilmedi.'
                });
                return false;
            }
            return true;
        }

        var kaydetCheck = () => {
            var ad = $('#birimadi').val();
            var aciklama = $('#aciklama').val();

            return kontrol(ad, aciklama);
        }

        var duzenleCheck = () => {

            const ad = $('#birimadi1').val();
            const aciklama = $('#birimaciklama').val();

            return kontrol(ad, aciklama);
        }

        $('#birimkaydet').click(function () {

            var ad = $('#birimadi').val();
            var aciklama = $('#aciklama').val();
            if (kaydetCheck()) {
                $.ajax({
                    url: '/Birim/Ekle',
                    type: 'POST',
                    dataType: 'json',
                    data: { Ad: ad, Aciklama: aciklama },
                    success: function (data) {
                        Swal.fire('Başarılı', 'Birim başarıyla eklendi.', 'success');
                        birimlistesi.destroy();
                        birimlistesicek();
                        $('#birimekle').modal('hide');
                        $('#birimadi').val('');
                        $('#aciklama').val('');
                    },
                    error: function (data) {
                        Swal.fire('Ooops..', 'Eklenirken bir sorunla karşılaşıldı.', 'error');
                    }
                });
            }
        });

        $(document).on('click', '.goruntule', function () {
            id = this.id;
            $('#birimaciklama').prop('disabled', true);
            $('#birimadi1').prop('disabled', true);
            $('#duzenlekaydet').prop('hidden', true);
            birimcek(id);


        });

        $(document).on('click', '.duzenle', function () {
            id = this.id;
            $('#birimaciklama').prop('disabled', false);
            $('#birimadi1').prop('disabled', false);
            $('#duzenlekaydet').prop('hidden', false);
            birimcek(id);

        });

        $(document).on('click', '.sil', function () {
            id = this.id;
            Swal.fire({
                title: "Gerçekten silmek istiyor musunuz?",
                html: "Bu birimi silerseniz <strong class='h5'>Birim Koordinatörleri ve Stajyerler arasındaki bağı da silmiş olursunuz</strong>, onaylıyor musunuz?",
                type: "error",
                confirmButtonText:
                    '<i class="mdi mdi-eraser"></i> Sil',
                confirmButtonColor: '#dc3545',
                showCancelButton: true,
                showConfirmButton: true,
                cancelButtonText: '<i class="mdi mdi-close-circle"></i> Kapat'
            }).then(function (result) {
                if (result.value) {

                    $.ajax({
                        url: "/Birim/Sil",
                        data: { id: id },
                        type: "POST",
                        dataType: "json",
                        success: function (data) {
                            Swal.fire('Silindi', 'Birim başarıyla silindi. <b>Koordinatör ve Stajyerler arasındaki bağlantıyı kontrol etmeyi unutmayın!</b>', 'success');
                            birimlistesi.destroy();
                            birimlistesicek();
                        },
                        error: function (data) {
                            Swal.fire('Silinemedi', 'Silinirken bir sorun oluştu, Lütfen tekrar deneyin!', 'error');
                        }
                    });

                }

            });
        });

        $('#duzenlekaydet').click(function () {

            var model = {
                id: id,
                Ad: $('#birimadi1').val(),
                Aciklama: $('#birimaciklama').val()
            }
            if (duzenleCheck()) {
                $.ajax({
                    url: '/Birim/Duzenle',
                    data: { birim: model, id: id },
                    dataType: "json",
                    type: 'POST',
                    success: function (data) {
                        Swal.fire('Başarılı', 'Başarıyla güncellendi.', 'success');
                        birimlistesi.destroy();
                        birimlistesicek();
                        $('#birimgoruntule').modal('hide');
                    },
                    error: function (data) {
                        Swal.fire('Oopss..', 'Güncellenirken bir sorunla karşılaşıldı.', 'error');
                    }
                });
            }
        });


    });
</script>
