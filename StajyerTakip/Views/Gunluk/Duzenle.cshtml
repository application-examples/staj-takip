@model Gunluk
@{
    ViewData["Title"] = "Duzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

<form method="post">

    <div class="form-group">
        <div class="row">
            <div class="form-group col-sm-8">
                <label for="baslik">Başlık: </label>
                <input type="text" class="form-control" id="baslik" name="Baslik" placeholder="Başlık" value="@Model.Baslik">
            </div>


            <div class="form-group col-sm-4">
                <label for="tarih">Tarih: </label>
                <div class="form-group">
                    <div class='input-group date' id='tarih' name="Tarih" >
                        <input type='date' class="form-control" disabled value="@Model.Tarih.ToString("yyyy-MM-dd")"/>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="form-group">
        <label for="icerik">İçerik: </label>
        <textarea class="form-control" id="icerik" name="Bilgiler" placeholder="Gün içerisinde yaptıklarınızı özet olarak yazınız..." >@Model.Bilgiler</textarea>
    </div>



    <div class="form-group">
        <label for="dosyasec">Dosya Seç</label>
        <input type="file" class="form-control-file" id="dosyasec" >
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>


</form>

</div>

