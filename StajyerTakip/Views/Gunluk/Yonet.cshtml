@model List<Stajyer>
@{
    ViewData["Title"] = "Günlükleri Yönet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Microsoft.AspNetCore.Http

@{
    var yetki = Context.Session.GetInt32("yetki");
    var profilid = Context.Session.GetInt32("profilid");
    var kadi = Context.Session.GetString("kadi");
    var id = Context.Session.GetInt32("id");
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Günlük Listesi</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Fotoğraf
                            </th>
                            <th>
                                Adı Soyadı
                            </th>
                            <th>
                                Listele
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var i in Model)
                            {

                                <tr>
                                    <td class="py-1 px-4">
                                        <img src="~/images/man.png" alt="image" class="img-rounded img-profile" width="32" />
                                    </td>
                                    <td>

                                        @i.Profil.Ad @i.Profil.Soyad

                                    </td>
                                    <td>
                                        <a href="~/Gunluk/Listele/@i.ID" class="btn btn-success">Görüntüle</a>
                                    </td>

                                </tr>

                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
