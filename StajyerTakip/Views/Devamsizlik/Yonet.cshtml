@model List<Stajyer>
@{
    ViewData["Title"] = "Yonet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Stajyer Bilgileri</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Fotoğraf
                            </th>
                            <th>
                                Adı Soyadı
                            </th>
                            <th>
                                Devamsızlık
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var i in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/images/man.png" alt="image" />
                                    </td>
                                    <td>
                                        @i.Profil.Ad @i.Profil.Soyad
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="~/Devamsizlik/Ekle/@i.ID" class="btn btn-sm btn-success">Ekle</a>
                                            <a href="~/Devamsizlik/Duzenle/@i.ID" class="btn btn-sm btn-primary">Düzenle</a>
                                            <a href="~/Devamsizlik/Goruntule/@i.ID" class="btn btn-sm btn-danger">Görüntüle</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


