@model Stajyer
@{
    ViewData["Title"] = "Puanla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım Değerlendirme</h4>

            <div class="form-group">
                <label for="kullanilacakteknolojiler">Proje Adı:</label>
                <select class="form-control" id="kullanilacakteknolojiler">
                    @{ 
                        foreach (var i in Model.Projeler)
                        {
                            <option>@i.Proje.Ad</option>
                        }
                    }
                </select>
            </div>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Fotoğraf
                            </th>
                            <th>
                                Adı Soyadı
                            </th>
                            <th>
                                Puanlama
                            </th>

                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="py-1">
                                <img src="../../images/faces-clipart/pic-1.png" alt="image" />
                            </td>
                            <td>
                                Herman Beck
                            </td>
                            <td>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                            </td>

                            <td>

                                <button type="button" class="btn btn-danger">Sil</button>

                            </td>
                        </tr>
                        <tr>
                            
                        </tr>
                        <tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

