@model Birim
@{
    ViewData["Title"] = "Duzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-10 offset-1 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4>Birim Bilgileri</h4>
            <form method="post">

                <div class="form-group">

                    <div class="form-group ">
                        <label for="birimadi">Birim Adı: </label>
                        <input type="text" class="form-control" id="birimadi" name="Ad" placeholder="Birim Adı" value="@Model.Ad">
                    </div>


                    <div class="form-group ">
                        <label for="acıklama">Açıklama: </label>
                        <textarea class="form-control" id="aciklama" name="Aciklama" placeholder="Açıklama">@Model.Aciklama </textarea>
                    </div>
                </div>

                <button type="submit" class="btn btn-success">Kaydet</button>

            </form>

        </div>
    </div>
</div>
