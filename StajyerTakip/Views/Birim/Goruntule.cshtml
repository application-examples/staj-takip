@model Birim
@{
    ViewData["Title"] = "Goruntule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-10 offset-1 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <form>

                <div class="form-group">
                    <label for="isim">Birim Adi: </label>
                    <input type="text" class="form-control" placeholder="Birim Adı" disabled value="@Model.Ad" />
                </div>
                <div class="form-group ">
                    <label for="acıklama">Açıklama: </label>
                    <textarea class="form-control" id="acıklama" placeholder="Açıklama" disabled>@Model.Aciklama</textarea>
                </div>
            </form>

        </div>

    </div>
</div>